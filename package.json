{
	"name": "blogfolio",
	"version": "0.0.1",
	"type": "module",
	"author": "Lucas Vienna <dev@lucasvienna.dev> (https://lucasvienna.dev)",
	"repository": {
		"type": "git",
		"url": "https://github.com/lucasvienna/blogfolio.git"
	},
	"license": "MIT-Modern-Variant",
	"private": true,
	"engines": {
		"node": ">=24.11.0",
		"pnpm": "^10.8.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "vitest",
		"test:ci": "vitest run --coverage",
		"test:e2e": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "oxlint --type-aware --fix --fix-suggestions && eslint --fix .",
		"lint:ci": "prettier --check . && eslint .",
		"format": "prettier --write --list-different .",
		"prepare": "pnpm exec playwright install",
		"postinstall": "svelte-kit sync"
	},
	"dependencies": {
		"@fontsource/fira-mono": "^5.2.7",
		"@picocss/pico": "^2.1.1",
		"lucide-svelte": "^0.562.0",
		"rehype-callouts": "^2.1.2",
		"rehype-slug": "^6.0.0",
		"rehype-unwrap-images": "^1.0.0",
		"remark-toc": "^9.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.2",
		"@neoconfetti/svelte": "^2.2.2",
		"@playwright/test": "^1.57.0",
		"@prettier/plugin-oxc": "^0.1.3",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.0",
		"@types/node": "^24.10.1",
		"@vitest/coverage-v8": "4.0.16",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-oxlint": "^1.35.0",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"mdsvex": "^0.12.6",
		"oxlint": "^1.35.0",
		"oxlint-tsgolint": "^0.10.0",
		"prettier": "^3.8.0",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.5",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.1",
		"vite": "^7.3.0",
		"vitest": "^4.0.16"
	}
}
